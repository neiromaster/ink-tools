{
  "name": "ink-tui-kit",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "dprint": "^0.50.2",
    "lefthook": "^2.0.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format:biome": "biome check --write --unsafe",
    "format:dprint": "dprint fmt",
    "format": "bun run format:*",
    "check": "biome check",
    "build": "bun run --filter \"*\" build"
  }
}
